            <%= f.label :currency %><br>
            <%= f.number_field :currency %>
          </div>
          <div class="field form-group col-sm-6 col-md-4 col-lg-3">
            <%= f.label :discovery %><br>
            <%= f.text_field :discovery %>
          </div>
          
            <div class="clearfix visible-sm-block"></div> 
            <div class="clearfix visible-md-block"></div>
          <br>
          <div class="actions">
