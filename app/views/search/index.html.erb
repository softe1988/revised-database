<%= form_for :search do |f| %>

<form role="form">
  <div class= "container-fluid">
      <div class="row">
        
        <div id="headphones">
          <img src="http://www.klickpush.com/wp-content/uploads/2014/10/kp-music.png" alt >
        </div>
        
        <div class="field form-group col-sm-6 col-md-4 col-lg-3">
            <%= f.label :song_ %><br>
            <%= f.text_field :terms %>
          </div>
          
          <div class="field form-group col-sm-6 col-md-4 col-lg-3">
            <%= f.label :name %><br>
            <%= f.text_field :name %>
